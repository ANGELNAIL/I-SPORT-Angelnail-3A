@page
@model I_SPORTUI.Pages.I_SPORT.EditarequipoModel
@{
    ViewData["Title"] = "Editarequipo";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form method="post" enctype="multipart/form-data">
                    <h1>Editar Equipo</h1>
                    <br />
                    <div>
                        <label>Nombre del equipo</label>
                        <input class="form-control" asp-for="Equipo.Nombre" id="Nombre" class="form-control" type="text" placeholder="Nombre del Equipo" />
                    </div>
                    <div class=" custom-file">
                        <input type="file" asp-for="Logo" class="custom-file-input form-control" lang="es">
                        <label class="custom-file-label" for="Logo">Elige tu foto</label>
                        <input hidden asp-for="Equipo.logo" />
                    </div>
                    <div class="d-flex justify-content-start p-2">
                        <button class="btn btn-success m-2" type="submit" name="button" value="Editar">Editar</button>
                        <button class="btn btn-danger m-2" type="submit" name="button" value="Eliminar">Eliminar</button>
                        <a asp-page="/I-SPORT/Verequipos" class="btn btn-secondary m-2" role="button">Regresar</a>
                        <div class="text-danger" asp-validation-summary="All"></div>
                    </div>
                    <div>
                        <label asp-for="Equipo.Id" hidden>ID</label>
                        <input asp-for="Equipo.Id" id="txb_idJugador" hidden class="form-control" type="text" placeholder="Estatura en metros" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>




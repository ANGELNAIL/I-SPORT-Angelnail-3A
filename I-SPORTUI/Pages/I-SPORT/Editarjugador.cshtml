@page
@model I_SPORTUI.Pages.I_SPORT.EditarjugadorModel
@{
    ViewData["Title"] = "Editarjugador";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form method="post" enctype="multipart/form-data">
                    <h1 class="text-center">Editar jugador</h1>
                    <br />
                    <div>
                        <label>Nombre</label>
                        <input asp-for="jugador.Nombre" id="Nombre" class="form-control" type="text" placeholder="Nombre del jugador" />
                    </div>
                    <div>
                        <label>Fecha de nacimiento</label>
                        <input asp-for="jugador.Fechanac" type="date" id="fechanac" class="form-control">
                    </div>
                    <div>
                        <label>Estatura</label>
                        <input asp-for="jugador.Estatura" id="Estatura" class="form-control" type="text" placeholder="Estatura en metros" />
                    </div>
                    <div>
                        <div class=" custom-file">
                            <input type="file" asp-for="Foto" class="custom-file-input form-control" lang="es">
                            <label  class="custom-file-label" for="Foto">Choose file</label>
                            <input hidden asp-for="jugador.Foto" />
                        </div>
                    </div>
                    <div>
                        <label asp-for="equipo.Id">Equipo</label>
                        <select class="form-control" asp-for="jugador.EquipoId" asp-items="@(new SelectList(Model.Listaequipo, "Id", "Nombre"))">
                            <option> seleccione su equipo </option>
                        </select>
                    </div>
                    <div>
                        <label asp-for="paises.Id">Equipo</label>
                        <select class="form-control" asp-for="jugador.Pais" asp-items="@(new SelectList(Model.Listapaises, "Id", "pais"))">
                            <option> seleccione su equipo </option>
                        </select>
                    </div>
                    <div>
                        <label>Posicion</label>
                        <select class="form-control" asp-for="jugador.posicion">
                            <option>Posicion</option>
                            <option value="Portero">Portero</option>
                            <option value="Defensa Central">Defensa Central</option>
                            <option value="Defensa Central">Defensa Central</option>
                            <option value="Defensa libre">Defensa libre</option>
                            <option value="Medio Campo">Medio Campo</option>
                            <option value="Medio Campo Central">Medio Campo Central</option>
                            <option value="Medio Campo Central">Medio Campo Central</option>
                            <option value="Medio Campo Ofensivo">Medio Campo Ofensivo</option>
                            <option value="Medio Centro Ofensivo">Medio Centro Ofensivo</option>
                            <option value="Segundo Delantero">Segundo Delantero</option>
                            <option value="Delantero Inferior">Delantero Inferior</option>
                            <option value="Delantero Central">Delantero Central</option>
                        </select>
                    </div>
                    <div>
                        <label asp-for="jugador.Id" hidden>ID</label>
                        <input asp-for="jugador.Id" id="txb_idJugador" hidden class="form-control" type="text" placeholder="Estatura en metros" />
                    </div>
                    <div class="d-flex justify-content-start p-2">
                        <button class="btn btn-success m-2" type="submit" name="button" value="Editar">Editar</button>
                        <button  class="btn btn-danger m-2" type="submit" name="button" value="Eliminar">Eliminar</button>
                        <a  asp-page="/I-SPORT/Ficha_jugador" class="btn btn-secondary m-2" role="button">Cancelar</a>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>


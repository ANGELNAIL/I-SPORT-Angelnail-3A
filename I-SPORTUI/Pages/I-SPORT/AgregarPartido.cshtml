@page
@model I_SPORTUI.Pages.I_SPORT.AgregarPartidoModel
@{
}

    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <form method="post" enctype="multipart/form-data">
                        <h1>Registrar Partido</h1>
                        <br />
                        <div >
                            <p>Fecha Partido: <input class="form-control" asp-for="partido.Fechapartido" type="datetime-local"></p>
                        </div>
                        <div>
                            <label asp-for="equipo.Id">Equipo Local</label>
                            <select class="form-control" asp-for="partido.Equipolocal" asp-items="@(new SelectList(Model.Listaequipo, "Id","Nombre"))">
                                <option> Seleccione Equipo Local </option>
                            </select>
                        </div>
                        <div>
                            <label asp-for="equipo.Id">Equipo Visitante</label>
                            <select class="form-control" asp-for="partido.Equipovisitante" asp-items="@(new SelectList(Model.Listaequipo, "Id","Nombre"))">
                                <option> Seleccione Equipo Visitante </option>
                            </select>
                        </div>                        
                        <div class="d-flex justify-content-lg-start p-2">
                            <button class="btn btn-success m-2" role="button">Guardar</button>
                            <a asp-page="/I-SPORT/Verpartido" class="btn btn-secondary m-2" role="button">Cancelar</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </body>


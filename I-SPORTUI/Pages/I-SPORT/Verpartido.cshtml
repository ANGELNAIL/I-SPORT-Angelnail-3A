@page
@model I_SPORTUI.Pages.I_SPORT.VerpartidoModel
@{
    ViewData["Title"] = "Verpartido";
}

<h1>Verpartido</h1>

<div class="card-deck">
    @foreach (var item in Model.partidos)
    { 
    

    <div class="card bg-light m-3" style="min-width:18rem; max-width:30.5%">
        <div class="card-header">
            <h4 class="text-center">Fecha: @item.Fechapartido.ToShortDateString()</h4>
        </div>
        <div class="card-body">
            @foreach (var tm in Model.equipos)
                @if (item.Equipolocal == tm.Id)
                    { 
                    <div><label>Equipo Local: @item.Equipolocal</label></div>
                       }
                 else 
                 {                       
                  <div><label>Equipo Visitante: @item.Equipovisitante</label></div>
                 }           
        </div>
        <div class="card-footer text-center">
            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
    </div>
    }
</div>